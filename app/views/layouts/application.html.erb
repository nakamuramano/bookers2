<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
        <a class="navbar-brand " href="/">Bookers</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
              <li class="nav-item active nav-link text-light">
                 <i class="fas fa-home"></i><%= link_to "Home", user_path(current_user.id), class: ' text-light' %>
              </li>
              <li class="nav-item nav-link text-light">
                <i class="fas fa-users"></i><%= link_to "User", users_path, class: 'text-light' %>
              </li>
              <li class="nav-item nav-link text-light">
                <i class="fas fa-book-open"></i><%= link_to "Books", books_path, class: 'text-light' %>
              </li>
              <li class="nav-item nav-link text-light">
                <i class="fas fa-sign-out-alt"></i><%= link_to "Log out", destroy_user_session_path, method: :delete, class: ' text-light' %>
              </li>

            <% else %>

              <li class="nav-item nav-link text-light">
                <i class="fas fa-home"></i><%= link_to "Home", root_path, class: 'text-light' %>
              </li>
              <li class="nav-item nav-link text-light">
                <i class="fas fa-link"></i><%= link_to "About", homes_about_path, class: 'text-light' %>
              </li>
              <li class="nav-item nav-link text-light">
                <i class="fas fa-user-plus"></i></i><%= link_to "sign up", new_user_registration_path, class: ' text-light' %>
              </li>
              <li class="nav-item nav-link text-light">
                <i class="fas fa-sign-in-alt"></i><%= link_to "Log in", new_user_session_path, class: ' text-light' %>
              </li>
            <% end %>
            </ul>
         </div>
         </div>
      </nav>
    </header>
    <%= yield %>







    <footer>
      <div class="container mt-5">
        <div class="row">
          <div  class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
