<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="/">Bookers</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
              <li class="nav-item active text-light">
                 <i class="fas fa-house-chimney"></i><%= link_to "Home", users_path(current_user.id) %>
              </li>
              <li class="nav-item text-light">
                <i class="fas fa-users"></i><%= link_to "User", users_path %>
              </li>
              <li class="nav-item text-light">
                <i class="fas fa-book-open"></i><%= link_to "Books", books_path %>
              </li>
              <li class="nav-item text-light">
                <i class="fas fa-right-from-bracket"></i><%= link_to "Log out", destroy_user_session_path, method: :delete %>
              </li>
            <% else %>
              <li class="nav-item text-light">
                <i class="fas fa-house"></i></i><%= link_to "Home", root_path %>
              </li>
              <li class="nav-item text-light">
                <i class="fas fa-link"></i><%= link_to "About", homes_about_path %>
              </li>
              <li class="nav-item text-light">
                <i class="fas fa-user-plus"></i></i><%= link_to "sign up", new_user_registration_path %>
              </li>
              <li class="nav-item text-light">
                <%= link_to "Log in", new_user_session_path %>
              </li>
            <% end %>
            </ul>
         </div>
      </nav>
    </header>
    <%= yield %>

    <footer>
      <div class="container mt-5">
        <div class="row">
          <div  class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
