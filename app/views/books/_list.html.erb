      <div class='col-md-3'>
        <h2>User info</h2>
          <%= image_tag user.get_profile_image(100,100) %></br>
          <table class="table">
            <tbody>
              <tr><th>name</th>
              <th><%= user.name %></th></tr>
              <tr><th>introduction</th>
              <th><%= user.introduction %></th></tr>
            </tbody>
          </table>

        <div class='row'>
         <a class="btn btn-outline-secondary btn-block edit_user_id" href="/users/:id/edit"><i class="fas fa-user-cog"></i></a>
        </div>

          <h2 class="mt-3">New book</h2>
          <%= form_with model: book do |f| %>
              <div class="form-group"><label for="book_title">Title</label></br>
                <%= f.text_field :title, class:"form-control" %></br>
              </div>
              <div class="form-group"><label for="book_opinion">Opinion</label></br>
                <%= f.text_area :body, class:"form-control" %></br>
              </div>
              <div class="form-group">
                <%= f.submit "Creste Book", class: "btn btn-success" %>
              </div>
          <% end %>
      </div>
